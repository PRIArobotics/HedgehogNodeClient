<?xml version="1.0"?>
<module name="io">
  <class type="req" syntax="(port, flags)"
         name="Action" message="IOAction">
    <description>IO action => ack</description>
  </class>
  <class type="req" syntax="(port)"
         name="CommandRequest">
    <description>IO command request => IO command reply</description>
    <field>port</field>
  </class>
  <class type="rep" syntax="(port, flags)"
         name="CommandReply">
    <description>IO command reply</description>
    <field>port</field>
    <field>flags</field>
  </class>
  <class type="req" syntax="(port, subscription)"
         name="CommandSubscribe">
    <description>IO command subscribe => ack</description>
    <field>port</field>
    <field>subscription</field>
  </class>
  <class type="upd" syntax="(port, flags, subscription)"
         name="CommandUpdate">
    <description>IO command update</description>
  </class>

  <complex dir="req" id="command" message="IOCommandMessage">
    <class>CommandRequest</class>
    <class>CommandSubscribe</class>
  </complex>
  <complex dir="rep" id="command" message="IOCommandMessage">
    <class>CommandReply</class>
    <class>CommandUpdate</class>
  </complex>
</module>
