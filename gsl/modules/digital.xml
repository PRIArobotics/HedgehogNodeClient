<?xml version="1.0"?>
<module name="digital">
  <class type="req" syntax="(port)"
         name="Request">
    <description>digital request => digital reply</description>
    <field>port</field>
  </class>
  <class type="rep" syntax="(port, value)"
         name="Reply">
    <description>digital reply</description>
    <field>port</field>
    <field>value</field>
  </class>
  <class type="req" syntax="(port, subscription)"
         name="Subscribe">
    <description>digital subscribe => ack</description>
    <field>port</field>
    <field>subscription</field>
  </class>
  <class type="upd" syntax="(port, value, subscription)"
         name="Update">
    <description>digital update</description>
  </class>

  <complex dir="req" id="" message="DigitalMessage">
    <class>Request</class>
    <class>Subscribe</class>
  </complex>
  <complex dir="rep" id="" message="DigitalMessage">
    <class>Reply</class>
    <class>Update</class>
  </complex>
</module>
