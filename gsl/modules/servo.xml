<?xml version="1.0"?>
<module name="servo">
  <class type="req" syntax="(port, active, position)"
         name="Action" message="ServoAction">
    <description>servo action => ack</description>
  </class>
  <class type="req" syntax="(port)"
         name="CommandRequest">
    <description>servo command request => servo command reply</description>
    <field>port</field>
  </class>
  <class type="rep" syntax="(port, active, position)"
         name="CommandReply">
    <description>servo command reply</description>
    <field>port</field>
    <field>active</field>
    <field>position</field>
  </class>
  <class type="req" syntax="(port, subscription)"
         name="CommandSubscribe">
    <description>servo command subscribe => ack</description>
    <field>port</field>
    <field>subscription</field>
  </class>
  <class type="upd" syntax="(port, active, position, subscription)"
         name="CommandUpdate">
    <description>servo command update</description>
  </class>

  <complex dir="req" id="command" message="ServoCommandMessage">
    <class>CommandRequest</class>
    <class>CommandSubscribe</class>
  </complex>
  <complex dir="rep" id="command" message="ServoCommandMessage">
    <class>CommandReply</class>
    <class>CommandUpdate</class>
  </complex>
</module>
