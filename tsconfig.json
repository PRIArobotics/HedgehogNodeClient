{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "allowJs": true,
    "outDir": "build"
  },
  "include": [
    "**/*.ts"
  ],
  "files": [
    "typings/index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
